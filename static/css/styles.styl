@import "menu.css"
@import "styles-sections.css"

@font-face {
    font-family: 'iconitos';
    src:url('../../static/fonts/icomoon.eot?m7anfz');
    src:url('../../static/fonts/icomoon.eot?#iefixm7anfz') format('embedded-opentype'),
        url('../../static/fonts/icomoon.woff?m7anfz') format('woff'),
        url('../../static/fonts/icomoon.ttf?m7anfz') format('truetype'),
        url('../../static/fonts/icomoon.svg?m7anfz#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

header
  margin 0

#logo
  background white
  margin 0
  padding 1em 0.5
  width 50%
  img
    width 100%
    margin-right auto
    margin-left auto
    width 100%

.logos
  display inline-block
  vertical-align top

.formulario
  display inline-block
  float right
  margin-top 1.5em
  text-align right
  padding 1em
  margin-top 0
  input
    border-radius 5px
    padding 0.2em 0.6em
  input[type="submit"]
    background #049802
    border 1px solid #049802
    box-shadow rgba(0,0,0,0.5) 5px 5px 20px
    font-style italic
    text-shadow rgba(0,0,0,0.5) 2px 2px 5px
    color white

.content-menuEducacion, .content-menuRecursos, .content-tweets
  display inline-block
  vertical-align top

.titulo-educacionAdultos
  border-bottom 2px solid red
  text-shadow 1px 2px 1px #CCCCCC

.menu-educacionAdultos
  margin 1em

.menu-educacionItem
  color #EEEEEE
  text-decoration none
  background url(../img/arrow-right.png) 0.5em 0.5em no-repeat
  padding-left 2em
  padding-top 0.5em

.titulo-recursosEducativos
  border-bottom 2px solid red
  text-shadow 1px 2px 1px #CCCCCC

.content-menuRecursos
  margin-top 0
  margin-left 1em
  width 380px

.menu-recursosItem
  color #EEEEEE
  text-decoration none
  background url(../img/arrow-right.png) 0.5em 0.5em no-repeat
  padding-left 2em
  padding-top 0.5em

.titulo-tweets
  border-bottom 2px solid red
  text-shadow 1px 2px 1px #CCCCCC

.banners
  margin 0 0 0 1em
  img
    border 1px solid #CCCCCC
    margin 0 0 0 0

.content-menuEducacion
  width 380px

.content-tweets
  margin-left 1em
  width 380px

.section2
  margin 0 0 1em 0

.menu1-section2, .menu2-section2
  margin-top 1.1em

.menu3-section2
  margin 0

.section2-banner
  margin 0

.menu1-section2, .menu2-section2, .menu3-section2
  display inline-block
  vertical-align top
  width 390px

.section3-banner
  display inline-block
  margin 0 0
  vertical-align top

.google
  border-radius 30px
  margin 0 0 2em 0
  display inline-block
  vertical-align top

.Footer
  background #004202

.banda
  margin 0
  width 100%
  img
    margin 0
    width 100%

#footeradress, #footerlinks, #sociallinks
  color lightgray
  display inline-block
  vertical-align top

#footeradress
  margin-left 2em

.acerca
  color white
  border-radius 50px
  border 1px solid white
  display inline-block
  margin 0 0.5em
  padding 0 1em
  list-style none

.menufooter
  display block

.menu-footer
  padding-left 10px
  margin-left 10px
  list-style-type none

.menu-footerItem
  padding-left 1.3em
  background url(../img/bullet_yellow.png) 0em 0em no-repeat
  margin-bottom 0.4em

.footer-menuLinks
  margin-left 3em

.footer-socialIcons
  margin-left 3em

.footer-sociallink
  color lightgray
  padding-left 0.4em
  text-decoration none

.sociallist
  list-style none

.icon-phone
  &:before
    content "\e600"
    font-family "iconitos"
    font-size 1.4em

.icon-download
  &:before
    content "\e601"
    font-family "iconitos"
    font-size 1.4em

.icon-mail
  &:before
    content "\e601"
    font-family "iconitos"
    font-size 1.4em

.icon-facebook
  &:before
    content "\e602"
    font-family "iconitos"
    font-size 1.4em

.icon-twitter
  &:before
    content "\e603"
    font-family "iconitos"
    font-size 1.4em

.icon-youtube
  &:before
    content "\e604"
    font-family "iconitos"
    font-size 1.4em

.icon-file-pdf
  &:before
    content "\e600"

.menu-footerLink
  color #EEEEEE
  text-decoration none

@media screen and (min-width:1200px)

  body
    width 1200px
    margin-right auto
    margin-left auto

@media screen and (max-width:768px)
  
  #logo
    width 100%
    
  .section2
    img
      margin
      width 300px
  
  .banners
    margin 0 1em
    
  #banner-section2
    display none
      
  .content-menuEducacion
    display inline-block
    width 45%

  .content-menuRecursos
    display inline-block
    width 45%
    
  .menu2-section2
    display inline-block
    width 45%

  .menu3-section2
    display inline-block
    width 45%

  .content-tweets
    display none
    
  #footeradress
    display block
    margin 1.5em
    text-align center

  #footerlinks
    display none
    
  .footer-socialIcons
    margin 1.5em
    text-align center 

  .icon-twitter
    display inline-block
    margin-right 1.5em
  
  .icon-facebook
    display inline-block
    margin-right 1.5em
  
  .icon-youtube
    display inline-block
    margin-right 1.5em
  
  .icon-mail
    display inline-block
    margin-right 1.5em
    
  .icon-phone
    display inline-block
    margin-right 1.5em

  #banner-section2
    .section2-banner
      img
        width 375px

footer
  #footeradress
    .address
      width 100%


